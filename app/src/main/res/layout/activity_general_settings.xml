<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/layout_common_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_f5f5f5">>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="聊天预览"
            android:textColor="@color/color_cccccc"
            android:textSize="14sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:background="@color/color_f5f5f5">
            <ImageView
                android:id="@+id/iv_bg_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/im_bg_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:id="@+id/ll"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/mine_chong"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/im_chat_left_bg"
                    android:layout_marginRight="54dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/color_262626"
                        android:textIsSelectable="true"
                        android:text="你好，我叫彩乐讯!"
                        android:layout_gravity="center_vertical"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:28 "
                        android:textColor="@color/blue0"
                        android:textSize="9dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="39dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="39dp"
                    android:src="@mipmap/mine_mv"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentRight="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv2"
                    android:layout_marginTop="12dp"
                    android:background="@mipmap/im_chat_right_bg"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/im_tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_262626"
                        android:autoLink="web"
                        android:textIsSelectable="true"
                        android:background="@null"
                        android:text="很高兴认识你!"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:28 "
                        android:textColor="@color/blue0"
                        android:textSize="9dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E6E6E6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/rl_chat"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天背景"
                android:textSize="15sp"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arr_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.5dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="我的预览"
            android:textColor="@color/color_cccccc"
            android:textSize="14sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_bg_2"
                android:src="@mipmap/im_mine_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E6E6E6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/rl_my"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的背景"
                android:textSize="15sp"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arr_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.5dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>