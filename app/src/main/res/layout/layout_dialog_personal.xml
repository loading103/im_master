<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape__bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/im_tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#999999"
            android:textSize="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp" />
        <TextView
            android:id="@+id/im_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textColor="#ff333333"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginTop="18dp" />
        <RelativeLayout
            android:id="@+id/im_rl_cancle"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/im_diaglog_detale"
                android:layout_marginTop="23dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_ededf7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:padding="8dp"
        android:background="@drawable/im_shape_btn_gray_c6">
        <EditText
            android:id="@+id/im_et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入你的个性签名"
            android:background="@null"
            android:textColor="@color/color_333333"
            android:lineSpacingExtra="5dp"
            android:textSize="13dp"
            android:gravity="start"
            android:layout_above="@+id/im_tv_number"/>
        <TextView
            android:id="@+id/im_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0/30"
            android:textColor="@color/color_999999"
            android:lineSpacingExtra="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/color_ededf7"/>
<!--    <ImageView-->
<!--        android:id="@+id/im_tv_btn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@mipmap/im_personal_finish"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:layout_marginBottom="15dp"-->
<!--        android:visibility="gone"-->
<!--        android:layout_marginRight="30dp"-->
<!--        android:layout_gravity="end"/>-->
    <TextView
        android:id="@+id/im_tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="30dp"
        android:text="完成"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/im_shape_btn_blue_c6"
        android:layout_gravity="end"/>
</LinearLayout>