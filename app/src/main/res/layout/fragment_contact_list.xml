<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F3F3F3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F3F3F3">
        <RelativeLayout
            android:id="@+id/im_ll_finish"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/im_iv_finish"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:visibility="gone"
                android:src="@mipmap/im_contact_birds" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系人"
            android:textColor="#2B2B2B"
            android:textSize="17dp" />
        <RelativeLayout
            android:id="@+id/ll_right"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/im_iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/main_add" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:visibility="visible"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1px"
            android:scrollbars="none"
            android:divider="@color/color_E6E6E6"
            android:listSelector="#00000000" >
        </ListView>

        <RelativeLayout
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_190"
            android:layout_marginBottom="20dp">
            <com.rhby.cailexun.widget.contactview.SideBar
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#00000000" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_head"
            android:layout_width="match_parent"
            android:layout_height="27dp">
            <TextView
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/color_808080"
                android:background="@color/color_F3F3F3"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
