<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageView
            android:id="@+id/im_iv_bg"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="fitXY"
            android:src="@mipmap/im_bg_header" />
        <RelativeLayout
            android:id="@+id/rl_top_finish"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/iv_top_finish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/im_top_change_jiantou" />
            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:text="个人信息"
                android:textSize="17dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/im_rl_contain"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:layout_height="100dp">
            <com.shehuan.niv.NiceImageView
                android:id="@+id/im_iv_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                app:border_color="@color/color_0BD2CF"
                app:border_width="1dp"
                app:is_circle="false"
                app:corner_radius="10dp"/>
<!--            <ImageView-->
<!--                android:id="@+id/im_iv_head"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp" />-->
            <ImageView
                android:id="@+id/im_iv_cameras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/im_person_camera"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_below="@+id/im_rl_contain"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/im_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#333333"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/im_iv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/im_tv_name"
                android:src="@mipmap/im_personal_name" />
        </RelativeLayout>


        <TextView
            android:id="@+id/im_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textColor="#333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/im_tv_signe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_tv_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="大海，我的水呀大海，我的水呀自由的人生啊"
            android:textColor="#333333"
            android:visibility="gone"
            android:paddingBottom="12dp"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/im_rl_sign"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:src="@mipmap/im_personal_sign" />
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_type"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="个性签名"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/tv_right"
                android:textSize="13sp"
                android:gravity="end"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:layout_marginRight="7.5dp"
                android:layout_marginLeft="30dp"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_right"
                android:layout_marginRight="20dp"
                android:src="@mipmap/im_chat_yjt" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="71dp"
            android:background="@color/color_f5f5f5"/>
        <RelativeLayout
            android:id="@+id/im_rl_name"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tv_name"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:src="@mipmap/im_member_leve" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_name"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="等级"
                android:textSize="15dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/im_iv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
                <TextView
                    android:id="@+id/im_no_leve"
                    android:textColor="@color/color_333333"
                    android:textSize="15dp"
                    android:text="--"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="71dp"
            android:background="@color/color_f5f5f5"/>
        <RelativeLayout
            android:id="@+id/im_rl_title"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tv_title"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:src="@mipmap/im_member_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_title"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="头衔"
                android:textSize="15dp"/>
            <RelativeLayout
                android:id="@+id/im_ll_title"
                android:layout_width="wrap_content"
                android:background="@mipmap/im_chat_title"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/im_tv_title"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="快三大神"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_no_title"
                android:textColor="@color/color_333333"
                android:textSize="15dp"
                android:text="--"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:paddingTop="4dp"
                android:layout_alignParentRight="true"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="71dp"
            android:background="@color/color_f5f5f5"/>
        <RelativeLayout
            android:id="@+id/im_rl_shoot"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:visibility="gone"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tv_shoot"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:src="@mipmap/im_member_shoot" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_shoot"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="命中率"
                android:textSize="15dp"/>

            <RelativeLayout
                android:id="@+id/im_ll_shoot"
                android:layout_width="wrap_content"
                android:background="@mipmap/im_infor_mz"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:layout_centerVertical="true"
                android:paddingRight="9dp"
                android:visibility="gone"
                android:paddingTop="4dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/im_tv_shoot"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:text="80%"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:textColor="@color/color_333333"
                android:text="--"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:paddingTop="4dp"
                android:layout_alignParentRight="true"
                android:paddingBottom="4dp"
                android:textSize="15dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="71dp"
            android:background="@color/color_f5f5f5"/>
        <RelativeLayout
            android:id="@+id/im_rl_type"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tv_type"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:src="@mipmap/im_member_type" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_type"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="用户类型"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/im_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:textColor="@color/color_333333"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
