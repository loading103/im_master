<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rhby.cailexun.ui.activity.LoginNewActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_root">
    <FrameLayout
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/login_bg">
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/iv_bg"/>-->
        <com.rhby.cailexun.widget.WaveRelativeLayoutView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom">

        </com.rhby.cailexun.widget.WaveRelativeLayoutView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/login_logo"
                android:layout_marginTop="75dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_back"
                android:src="@mipmap/icon_back"
                android:paddingLeft="15dp"
                android:paddingTop="30dp"/>
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_phone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_phone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/et_account2"
                    android:hint="请输入手机号码"
                    android:paddingLeft="11dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/im_shape__lin_bg"
                    android:textSize="16sp"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_333333"
                    android:maxLength="11"
                    android:inputType="phone"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E6E6E6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_circle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/et_number2"
                    android:hint="请输入圈码"
                    android:paddingLeft="11dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_333333"
                    android:maxLength="20"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E6E6E6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_ver"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/et_password2"
                    android:layout_marginRight="30dp"
                    android:hint="请输入验证码"
                    android:paddingLeft="11dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/im_shape__lin_bg"
                    android:textSize="16sp"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_333333"
                    android:inputType="number"
                    android:maxLength="6"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_code2"
                    android:text="获取验证码"
                    android:textSize="14sp"
                    android:textColor="@color/color_02AEFD"
                    android:layout_marginRight="30dp"
                    android:gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E6E6E6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:text="使用密码登录"
                android:textSize="12sp"
                android:textColor="@color/color_02AEFD"
                android:layout_marginLeft="30dp"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_account"
            android:orientation="vertical"
            android:visibility="invisible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_account"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/et_account"
                    android:hint="请输入账号"
                    android:paddingLeft="11dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_333333"
                    android:maxLength="20"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E6E6E6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_circle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/et_number"
                    android:hint="请输入圈码"
                    android:paddingLeft="11dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_333333"
                    android:maxLength="20"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E6E6E6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_pass"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/et_password"
                    android:hint="请输入密码"
                    android:paddingLeft="11dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_333333"
                    android:inputType="textPassword"
                    android:maxLength="20"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E6E6E6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_code"
                    android:text="手机号快捷登录"
                    android:textSize="12sp"
                    android:textColor="@color/color_02AEFD"
                    android:paddingBottom="18dp"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_register"
                    android:text="立即注册"
                    android:textSize="12sp"
                    android:textColor="@color/color_02AEFD"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/btn_login"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_blue_corner"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_agree"
        android:text="登录即代表您同意《用户协议》以及《隐私条款》"
        android:textSize="13sp"
        android:textColor="@color/color_333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textColorHighlight="#00ffffff"/>
</LinearLayout>