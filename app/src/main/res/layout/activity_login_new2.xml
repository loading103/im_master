<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rhby.cailexun.ui.activity.LoginNewActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@mipmap/login_bg">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/login_logo"
                android:layout_marginTop="75dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_back"
                android:src="@mipmap/icon_back"
                android:paddingLeft="15dp"
                android:paddingTop="30dp"/>
        </RelativeLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/et_account"
            android:hint="请输入手机号"
            android:paddingLeft="11dp"
            android:background="@null"
            android:textSize="16sp"
            android:textCursorDrawable="@drawable/im_shape__lin_bg"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_333333"
            android:maxLength="20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E6E6E6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_circle"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/et_number"
            android:hint="请输入圈码"
            android:paddingLeft="11dp"
            android:background="@null"
            android:textSize="16sp"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_333333"
            android:maxLength="20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E6E6E6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_ver"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/et_password"
            android:layout_marginRight="30dp"
            android:hint="请输入验证码"
            android:paddingLeft="11dp"
            android:textCursorDrawable="@drawable/im_shape__lin_bg"
            android:background="@null"
            android:textSize="16sp"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_333333"
            android:inputType="number"
            android:maxLength="6"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_code"
            android:text="获取验证码"
            android:textSize="14sp"
            android:textColor="@color/color_02AEFD"
            android:layout_marginRight="30dp"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_E6E6E6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phone"
        android:text="使用密码登录"
        android:textSize="12sp"
        android:textColor="@color/color_02AEFD"
        android:layout_marginLeft="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="18dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/btn_login"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_blue_corner"/>
</LinearLayout>