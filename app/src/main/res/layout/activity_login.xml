<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="安卓测试普通用户1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_uid"
        android:background="@drawable/im_shape_bg_white12"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/color_05A9FE"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="安卓测试普通用户2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@+id/et_uid"
        android:background="@drawable/im_shape_bg_white12"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_05A9FE"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="安卓测试普通用户3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_uid"
        android:layout_gravity="center"
        android:background="@drawable/im_shape_bg_white12"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_05A9FE"/>

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="安卓测试游客用户"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_uid"
        android:background="@drawable/im_shape_bg_white12"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/color_05A9FE"/>
    <EditText
        android:id="@+id/et_uid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="请输入用户Id"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:background="@drawable/im_shape_password_bg"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="点击进入"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_uid"
        android:background="@drawable/im_shape_btn_ensure"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

</LinearLayout>