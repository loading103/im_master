<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/layout_common_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/white">
            <com.android.im.imview.IMRoundAngleImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dp_98"
                android:layout_height="@dimen/dp_98"
                android:layout_marginTop="@dimen/dp_55"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/im_clx_group"/>
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="产品介绍"
                android:textColor="@color/color_333333"
                android:textSize="15dp"
                android:layout_below="@+id/iv"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    彩乐讯是一款即时聊天通讯软件，支持跨通信运营商、跨操作系统平台通过网络快速发送免费（需消耗少量网络流量）语音短信、视频、图片和文字，同时，也可以使用通过共享流媒体内容的资料。"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_5"
                android:layout_below="@+id/tv_1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_below="@+id/tv_2"
                android:background="@color/color_f5f5f5"
                android:layout_marginTop="@dimen/dp_49" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_type"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="产品名称 :"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/im_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="彩乐讯"
                android:textSize="14dp"
                android:textColor="@color/color_333333" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_type"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="联系我们 :"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="021-68517505"
                android:textSize="14dp"
                android:textColor="@color/color_333333" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_type"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="20dp"
                android:text="版本号 :"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_verson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="1.0"
                android:textSize="14dp"
                android:textColor="@color/color_333333" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>