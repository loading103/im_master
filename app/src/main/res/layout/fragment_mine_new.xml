<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_281">
                <com.rhby.cailexun.widget.NewBesselImageView
                    android:id="@+id/im_iv_headview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/im_mine_01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="18dp"
                    android:textColor="@color/color_FEFEFE"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:background="@mipmap/im_bg_white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_120">
                <LinearLayout
                    android:id="@+id/im_ll_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_62"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/im_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="哇哈哈"
                        android:textColor="#333333"
                        android:textSize="18dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/im_btn_edit"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_10"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/im_tv_signe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="愿你一生温暖纯良，不舍爱与自321212122323由"
                    android:textColor="#aaaaaa"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/dp_7"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginTop="-10dp"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/im_iv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/im_member_v1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等级"
                            android:layout_marginTop="@dimen/dp_7"
                            android:textColor="#aaaaaa"
                            android:textSize="14dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <RelativeLayout
                            android:id="@+id/im_ll_title"
                            android:layout_width="wrap_content"
                            android:background="@mipmap/im_chat_title"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:id="@+id/im_tv_title"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:text="平民"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/im_tv_no_title"
                            android:textColor="@color/color_333333"
                            android:textSize="15dp"
                            android:text="--"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="头衔"
                            android:layout_marginTop="@dimen/dp_7"
                            android:textColor="#aaaaaa"
                            android:textSize="14dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/im_iv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/im_img_vip"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户类型"
                            android:layout_marginTop="@dimen/dp_7"
                            android:textColor="#aaaaaa"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.shehuan.niv.NiceImageView
                android:id="@+id/im_iv_head"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_106"
                app:border_color="@color/color_0BD2CF"
                app:border_width="1dp"
                app:is_circle="false"
                app:corner_radius="10dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/im_rl_person"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_btn_ger"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/im_rl_scan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_btn_erwm"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的二维码"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/im_rl_common_set"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_btn_tyshej"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通用设置"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/im_rl_account_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_btn_zhanghao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号设置"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/im_rl_chucun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_btn_zunchu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="储存空间"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/im_rl_about_us"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_btn_about_us"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/im_rl_xcx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_btn_xcx"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小程序"
                    android:layout_marginTop="10dp"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>