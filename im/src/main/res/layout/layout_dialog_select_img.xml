<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape__bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享到我的群"
            android:textColor="#ff333333"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="18dp" />
        <RelativeLayout
            android:id="@+id/im_rl_cancle"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/im_diaglog_detale"
                android:layout_marginTop="23dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/color_ededf7"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/im_recycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/color_ededf7"/>
    <ImageView
        android:id="@+id/im_iv_share"
        android:layout_width="182dp"
        android:layout_height="38dp"
        android:src="@mipmap/im_diaglog_share"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>