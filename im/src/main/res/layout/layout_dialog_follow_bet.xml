<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape__bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/im_iv_gamehead"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:src="@mipmap/im_gameico_1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/im_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分分快三"
                android:layout_marginLeft="11dp"
                android:textColor="@color/color_454444"
                android:textSize="17dp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="封盘时间："
                    android:textColor="@color/color_999999"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/im_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:49"
                    android:textColor="@color/red6"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/im_rl_cancle"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/im_diaglog_detale"
                android:layout_marginTop="23dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_BBBBBB"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="期号"
            android:textColor="@color/color_666666"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/im_tv_qh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="201900928116"
            android:textColor="@color/color_33beff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_BBBBBB"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="玩法"
            android:textColor="@color/color_666666"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/im_tv_game"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="玩法"
            android:textColor="@color/color_33beff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/color_BBBBBB"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:visibility="gone"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="内容"
            android:textColor="@color/color_666666"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/im_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="大"
            android:textColor="@color/color_33beff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_BBBBBB"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="投注"
            android:textColor="@color/color_666666"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/im_tv_tz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="X1"
            android:textColor="@color/color_33beff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/color_BBBBBB"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:visibility="gone"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="倍数"
            android:textColor="@color/color_666666"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="X1"
            android:textColor="@color/color_33beff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_BBBBBB"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="金额"
            android:textColor="@color/color_666666"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/im_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="120"
            android:textColor="@color/color_33beff"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_BBBBBB"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/im_et_content"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:hint="输入修改单注金额"
            android:layout_gravity="center_vertical|right"
            android:textColorHint="@color/color_dfdddd"
            android:textColor="@color/color_333333"
            android:gravity="start|center"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:background="@drawable/im_shape_gray_line"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/im_tv_follow"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:text="立即跟投"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/im_shape_bg_blue6"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>