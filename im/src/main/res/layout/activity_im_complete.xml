<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/layout_im_common_title_white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f5f5f5"
            android:layout_marginTop="12.5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:padding="8dp">
                <EditText
                    android:id="@+id/im_et_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入你要投诉的内容"
                    android:background="@null"
                    android:textColor="@color/color_333333"
                    android:lineSpacingExtra="5dp"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="start"
                    android:maxLength="500"
                    android:layout_above="@+id/im_tv_number"/>
                <TextView
                    android:id="@+id/im_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0/500"
                    android:maxLength="500"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/color_999999"
                    android:lineSpacingExtra="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/tv_history"
                    android:textColor="@color/color_333333"
                    android:text="上传图片"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:background="@color/color_f5f5f5"
                    android:textSize="15dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/tv1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/im_iv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0/4"
                    android:maxLength="500"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/color_999999"
                    android:lineSpacingExtra="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_ensure"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="44dp"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/im_shape_bg_gry15"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>