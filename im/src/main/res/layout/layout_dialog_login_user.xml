<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_contain_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/im_tv_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/color_666666"
                android:text="用户协议"/>
            <View
                android:id="@+id/im_lin_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_contain_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/im_tv_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/color_3f87e3"
                android:text="隐私政策"/>
            <View
                android:id="@+id/im_lin_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/blue0"/>
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/im_web"
        android:layout_width="match_parent"
        android:layout_height="310dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <LinearLayout
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#66666666"
            android:text="不同意"/>
        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:background="#99999999"/>
        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_3f87e3"
            android:text="同意"/>
    </LinearLayout>
</LinearLayout>