<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape__bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/im_iv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/im_share_sucess"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/im_tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff333333"
        android:textSize="16dp"
        android:gravity="center"
        android:text="恭喜你，投注成功！"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"/>
    <View
        android:id="@+id/im_tv_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_BBBBBB"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="19dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/im_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1BCE35"
            android:textSize="16dp"
            android:gravity="center"
            android:text="纷纷时时彩："
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/im_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FB3D3E"
            android:textSize="16dp"
            android:gravity="center"
            android:text="10元"
            android:layout_gravity="center" />
    </LinearLayout>
    <TextView
        android:id="@+id/im_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="投注时间:2019-09-02  23:56:11"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/im_iv_share"
                android:layout_width="93dp"
                android:layout_height="36dp"
                android:text="分享到群"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                android:background="@drawable/im_shape_bg_yellow4"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/im_iv_follow"
                android:layout_width="93dp"
                android:layout_height="36dp"
                android:text="继续投注"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                android:background="@drawable/im_shape_bg_blue6"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="15sp"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>