<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape__bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/im_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示!"
        android:textColor="#ff333333"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_marginTop="25dp" />
    <TextView
        android:id="@+id/im_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="是否需要清空是否需要清空数据缓存是否需要清空数据缓存数据缓存？"
        android:textColor="#ff333333"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/tv_ensure"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="34dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="@drawable/im_shape_bg_blue15"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/color_666666"/>
        <View
            android:id="@+id/views"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_ededf7"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/color_3f87e3"/>
    </LinearLayout>
</LinearLayout>