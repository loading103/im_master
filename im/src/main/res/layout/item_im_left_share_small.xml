<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/im_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/im_shape_im_time_bg"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <com.android.im.imview.IMRoundAngleImageView
        android:id="@+id/im_iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_below="@id/im_chat_time" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/im_iv_head"
        android:layout_below="@id/im_chat_time"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/im_ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/im_iv_level"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:src="@mipmap/im_mine_vip"/>
            <RelativeLayout
                android:id="@+id/im_ll_title"
                android:layout_width="wrap_content"
                android:background="@mipmap/im_chat_title"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:paddingBottom="2dp">
                <TextView
                    android:id="@+id/im_tv_title"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/im_tv_name"
                android:layout_marginLeft="8dp"
                android:textColor="@color/color_666666"
                android:textSize="14dp"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@mipmap/im_chat_left_bg"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/im_iv_head"
            android:layout_below="@id/im_chat_time"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/im_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/im_dkp" />
                <TextView
                    android:id="@+id/im_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WebDkp"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:gravity="center" />
            </LinearLayout>
            <TextView
                android:id="@+id/im_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebDkp-游戏推荐"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="13dp" />
            <com.android.im.imview.IMRoundAngleImageView
                android:id="@+id/im_image"
                android:layout_width="181dp"
                android:scaleType="fitXY"
                android:src="@mipmap/splash_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="180dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/color_cccccc"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="小程序"
                    android:textColor="#ff333333"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/im_small_share"
                    android:layout_below="@+id/iv_content"
                    android:textSize="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_time"
                    android:text="16:28"
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:drawableRight="@mipmap/chat_cg_white"
                    android:drawablePadding="6dp"
                    android:background="@drawable/im_shape_corner_chat"
                    android:paddingLeft="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="4dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>