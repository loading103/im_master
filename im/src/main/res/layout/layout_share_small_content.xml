<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape__bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/im_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送给"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="17dp"
            android:visibility="gone"
            android:src="@mipmap/im_list_head_1"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据"
            android:visibility="gone"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/color_2B2B2B"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_cccccc"/>
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:paddingBottom="5dp"
        android:background="@drawable/im_shape_btn_small">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="d为你推荐游戏圈"
            android:textColor="#ff333333"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:textSize="10dp"/>
        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="103dp"
            android:layout_height="123dp"
            android:src="@mipmap/splash_bg"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/tv_1"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小程序"
            android:textColor="#ff333333"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/im_small_share"
            android:layout_below="@+id/iv_content"
            android:textSize="10dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/im_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:maxHeight="200dp"
        android:hint=" 说点什么"
        android:textColorHint="#CCCACA"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@null"
        android:textColor="@color/color_333333"
        android:lineSpacingExtra="5dp"
        android:textSize="13dp"
        android:gravity="start"
        android:layout_above="@+id/im_tv_number"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_E6E6E6"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_E6E6E6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/color_333333"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_E6E6E6"/>
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发送"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingTop="15dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="15dp"
            android:textSize="15dp"
            android:textColor="#07B0FD"/>
    </LinearLayout>

</LinearLayout>