<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:padding="5dp">
    <TextView
        android:id="@+id/im_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/im_shape_im_time_bg"
        android:textColor="@color/white"
        android:text="18.30"
        android:textSize="13dp" />
    <com.android.im.imview.IMRoundAngleImageView
        android:id="@+id/im_iv_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_below="@id/im_chat_time" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/im_iv_head"
        android:layout_below="@id/im_chat_time"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/im_ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/im_iv_level"
                android:layout_width="18dp"
                android:visibility="gone"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/im_mine_vip" />
            <RelativeLayout
                android:id="@+id/im_ll_title"
                android:layout_width="wrap_content"
                android:background="@mipmap/im_chat_title"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="2dp">
                <TextView
                    android:id="@+id/im_tv_title"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/im_tv_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_666666"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="54dp"
            android:id="@+id/ll_text"
            android:background="@mipmap/im_chat_left_bg"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/im_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:background="@null"
                    android:text="111111111"
                    android:textColor="@color/color_262626"
                    android:textColorLink="@color/color_449CFF"
                    android:textIsSelectable="true"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_time2"
                    android:text="14:28"
                    android:singleLine="true"
                    android:textSize="9sp"
                    android:textColor="@color/color_999999"
                    android:layout_gravity="bottom|right"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:text="14:28"
                android:singleLine="true"
                android:textSize="9dp"
                android:textColor="@color/color_999999"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5.5dp"
                android:drawablePadding="4.5dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>