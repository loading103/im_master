<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <ImageView
                android:id="@+id/im_iv_bg"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                android:src="@mipmap/im_bg_header" />
            <RelativeLayout
                android:id="@+id/rl_top_finish"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="55dp">
                <RelativeLayout
                    android:id="@+id/iv_top_finish"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/im_top_change_jiantou" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/iv_top_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/im_chat_more" />
            </RelativeLayout>
            <com.shehuan.niv.NiceImageView
                android:id="@+id/im_iv_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                app:border_color="@color/color_0BD2CF"
                app:border_width="1dp"
                app:is_circle="false"
                app:corner_radius="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="125dp"/>
<!--            <ImageView-->
<!--                android:id="@+id/im_iv_head"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginTop="125dp" />-->
            <TextView
                android:id="@+id/im_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_iv_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/im_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_tv_name"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:textColor="#333333"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/im_tv_signe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_tv_id"
                android:layout_centerHorizontal="true"
                android:textColor="#333333"
                android:paddingBottom="12dp"
                android:textSize="12dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/im_rl_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tv_name"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/im_member_leve" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_name"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="20dp"
                    android:text="等级"
                    android:textSize="15dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/im_iv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp" />
                    <TextView
                        android:id="@+id/im_no_leve"
                        android:textColor="@color/color_333333"
                        android:textSize="15dp"
                        android:text="--"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingRight="20dp"
                        android:paddingTop="4dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="4dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/im_rl_title"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tv_title"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/im_member_title" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_title"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="20dp"
                    android:text="头衔"
                    android:textSize="15dp"/>
                <RelativeLayout
                    android:id="@+id/im_ll_title"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/im_chat_title"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:id="@+id/im_tv_title"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:text=""
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/im_no_title"
                    android:textColor="@color/color_333333"
                    android:textSize="15dp"
                    android:text="--"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="19dp"
                    android:paddingTop="4dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/im_rl_shoot"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tv_shoot"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/im_member_shoot" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_shoot"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="20dp"
                    android:text="命中率"
                    android:textSize="15dp"/>

                <RelativeLayout
                    android:id="@+id/im_ll_shoot"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/im_infor_mz"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:paddingRight="9dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="4dp">
                    <TextView
                        android:id="@+id/im_tv_shoot"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:text="80%"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/im_no_mz"
                    android:textColor="@color/color_333333"
                    android:textSize="15dp"
                    android:text="--"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:visibility="gone"
                    android:paddingTop="4dp"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/im_rl_type"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tv_type"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/im_member_type" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_type"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="20dp"
                    android:text="用户类型"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/im_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"
                    android:textColor="@color/color_333333"
                    />
            </RelativeLayout>
<!--            <ImageView-->
<!--                android:id="@+id/im_iv_send"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--            -->
<!--                android:src="@mipmap/im_member_send"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/im_iv_send"
                android:text="发送消息"
                android:textSize="15dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/im_shape_btn_blue_c28"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_delete"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D82E2E">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="删除联系人"/>
    </LinearLayout>
</RelativeLayout>
