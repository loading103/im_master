<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    >

    <TextView
        android:id="@+id/im_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/im_shape_im_time_bg"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <com.android.im.imview.IMRoundAngleImageView
        android:id="@+id/im_iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/im_list_head_1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/im_chat_time" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/im_iv_head"
        android:layout_below="@id/im_chat_time"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/im_ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/im_iv_level"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/im_mine_vip"/>
            <RelativeLayout
                android:id="@+id/im_ll_title"
                android:layout_width="wrap_content"
                android:background="@mipmap/im_chat_title"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="8dp"
                android:paddingBottom="2dp">
                <TextView
                    android:id="@+id/im_tv_title"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:text="神"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/im_tv_name"
                android:layout_marginLeft="8dp"
                android:textColor="@color/color_666666"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="184dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/im_chat_time"
            android:background="@drawable/im_shape_blue_line"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/im_content_head"
                    android:layout_width="37dp"
                    android:layout_gravity="center"
                    android:layout_height="37dp" />
                <TextView
                    android:id="@+id/im_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="15dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_BBBBBB"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="期号"
                        android:textColor="@color/color_BBBBBB"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/im_content_qh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:layout_gravity="center"
                        android:maxLines="2"
                        android:layout_marginLeft="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textSize="15dp" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_BBBBBB"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="玩法"
                        android:textColor="@color/color_BBBBBB"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/im_content_play"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_BBBBBB"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="内容"
                        android:textColor="@color/color_BBBBBB"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/im_content_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textSize="15dp" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_BBBBBB"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="金额"
                        android:textColor="@color/color_BBBBBB"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/im_content_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/color_34BCFF"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_BBBBBB"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingRight="1dp"
                android:paddingLeft="1dp">
                <TextView
                    android:id="@+id/im_content_follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="立即跟投"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:background="@drawable/im_shape_follow"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>










