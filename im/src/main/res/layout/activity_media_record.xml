<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.im.imview.recordvideo.widget.MediaRecorderView
        android:id="@+id/amr_recordview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/amr_reverse_igview"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="top|right"
        android:layout_margin="30dp"
        android:src="@drawable/camera_reverse_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/amr_back_igview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="67dp"
        android:layout_marginLeft="56dp"
        android:src="@drawable/im_photograph_return" />

    <ImageView
        android:id="@+id/amr_camera_igview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="55dp"
        android:src="@mipmap/im_record_photograph" />

    <!-- 长按进度条 -->

    <com.android.im.imview.recordvideo.widget.RecordProgressBar
        android:id="@+id/amr_record_pbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:visibility="gone" />

    <!-- 对焦缩放 -->

    <ImageView
        android:id="@+id/amr_focus_igview"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:src="@mipmap/im_record_chat_focusing"
        android:visibility="gone" />

</FrameLayout>
