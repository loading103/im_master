<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/im_shape_corner_white"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="34.5dp"
            android:layout_height="34.5dp"
            android:id="@+id/iv_head"
            android:layout_marginTop="25.5dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/mine_chong"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:text="英雄联盟"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E6E6E6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="15.5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取你的昵称、头像、地区及性别"
            android:textSize="12sp"
            android:textColor="@color/color_333333"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="31dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="27.5dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp">
            <ImageView
                android:layout_width="27.5dp"
                android:layout_height="27.5dp"
                android:id="@+id/iv_person"
                android:src="@mipmap/mine_chong"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:text="周杰伦"
                android:textSize="12sp"
                android:textColor="@color/color_333333"
                android:layout_toRightOf="@+id/iv_person"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iv_person"
                android:text="哎呦，不错哦！"
                android:textColor="@color/color_999999"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/small_gou" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_cccccc"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.5dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="15.5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许即代表你同意授权身份信息"
            android:textSize="10sp"
            android:textColor="@color/color_333232"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="31dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="84dp"
                android:layout_height="29dp"
                android:id="@+id/tv_cancer"
                android:text="拒绝"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/im_shape_bg_corner_gray"/>
            <TextView
                android:layout_width="84dp"
                android:layout_height="29dp"
                android:id="@+id/tv_agree"
                android:text="允许"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="42dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/im_shape_bg_corner_blue"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>