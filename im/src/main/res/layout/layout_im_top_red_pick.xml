<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:id="@+id/rl_top"
    android:background="@color/color_f25442">
    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textSize="17dp" />
    <RelativeLayout
        android:id="@+id/rl_top_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_top_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/im_top_change_jiantou" />
        <TextView
            android:id="@+id/tv_top_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/iv_top_finish"
            android:textSize="15dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_top_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="红包记录"
        android:textColor="@color/color_FFE3B2"
        android:paddingLeft="8dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:drawablePadding="10dp"
        android:textSize="16dp" />
</RelativeLayout>