<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ll_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/color_F3F3F3"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:id="@+id/ll_left"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/im_iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_centerVertical="true"
                    android:text="@string/im_conversation_bj"
                    android:visibility="gone"
                    android:textSize="16dp"
                    android:textColor="@color/color_02AEFD" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/im_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="@string/im_conversation_title"
                    android:textColor="@color/color_2B2B2B"
                    android:textSize="18dp"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/ll_right"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/im_iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/main_add" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/ll_search"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:background="@drawable/im_search_bg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/im_tv_serch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="搜索聊天"
            android:textSize="13dp"
            android:gravity="center|start"
            android:textCursorDrawable="@drawable/im_shape__lin_bg"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_gravity="center"
            android:textColor="@color/color_333333"
            android:drawableLeft="@mipmap/im_conversation_serch"
            android:drawablePadding="10dp"/>
    </LinearLayout>
</LinearLayout>