<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="15dp">
    <TextView
        android:id="@+id/im_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/im_shape_im_time_bg"
        android:textColor="@color/white"
        android:textSize="13dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/im_chat_time"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="68"
            android:layout_height="wrap_content">
            <com.android.im.imview.IMRoundAngleImageView
                android:id="@+id/im_iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/im_list_head_1" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="265"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/im_iv_head"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/im_ll_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/im_iv_level"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/im_mine_vip"/>
                <RelativeLayout
                    android:id="@+id/im_ll_title"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/im_chat_title"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="2dp">
                    <TextView
                        android:id="@+id/im_tv_title"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:text="神"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/im_tv_name"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_666666"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/im_ll_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/im_chat_time"
                android:background="@mipmap/im_chat_left_redbao"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.3">
                    <ImageView
                        android:id="@+id/im_red_li"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/im_chat_redpack"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"/>
                    <TextView
                        android:id="@+id/im_tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="恭喜发财，大吉大利!"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:maxLength="10"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11086彩金红包"
                        android:textColor="@color/color_878686"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:id="@+id/im_tv_type"
                        android:layout_marginLeft="18dp"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="95"/>
    </LinearLayout>
</RelativeLayout>










