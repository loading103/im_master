<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">
    <TextView
        android:id="@+id/im_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/im_shape_im_time_bg"
        android:textColor="@color/white"
        android:textSize="13dp" />
    <LinearLayout
        android:id="@+id/ll_im_container"
        android:layout_width="match_parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/im_shape_im_commom_bg_cor4"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/im_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_333333"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:text="投诉成功通知"/>
        <TextView
            android:id="@+id/im_tv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="投诉对象：小哈哈"
            android:textColor="@color/color_adadad"
            android:textSize="14dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/im_tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="审核结果：未发现违规行为"
            android:textColor="@color/color_adadad"
            android:textSize="14dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/im_tv_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="处理方式：不予处罚"
            android:textColor="@color/color_adadad"
            android:textSize="14dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/im_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="净化网络环境，改善用户体验靠大家，感谢你对
彩乐讯平台的支持。"
            android:textColor="@color/color_333333"
            android:textSize="14dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/im_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30"
            android:textColor="@color/color_333333"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="1dp"
            android:textSize="13dp" />

    </LinearLayout>
</LinearLayout>